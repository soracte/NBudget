@Styles.Render("~/Content/KoGridCss")
@Styles.Render("~/Content/budget.css")

@Scripts.Render("~/Scripts/nbudget/login.js")
<form class="form" action="@Url.Action("Index", "Home")" style="margin: 10px;" data-bind="submit: login">
    <h1>Log in</h1>
    <div class="form-group">
        <input type="text" class="form-control" data-bind="value: email" placeholder="E-mail address" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" data-bind="value: password" placeholder="Password" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Log in</button>
    </div>
    <div>Not registered yet? @Html.ActionLink("Sign up here.", "Index", "Register")</div>
</form>

