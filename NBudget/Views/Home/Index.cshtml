@Styles.Render("~/Content/KoGridCss")
@Styles.Render("~/Content/budget.css")
@Styles.Render("~/Content/pikaday.css")


@Scripts.Render("~/bundles/knockout")
@Scripts.Render("~/bundles/koGrid")
@Scripts.Render("~/Scripts/budget.js")
@Scripts.Render("~/Scripts/moment.js")
@Scripts.Render("~/Scripts/pikaday.js")

<form class="form-inline" style="margin: 10px;" data-bind="submit: addNewTransaction">
    <div class="form-group">
        <input type="text" class="form-control" id="datepicker" data-bind="value: $data.date" placeholder="Dátum"/>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="amount" data-bind="value: $data.amount" placeholder="Összeg"/>
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="reason" data-bind="value: $data.reason" placeholder="Megnevezés"/>
    </div>
    <button type="submit" class="btn btn-default">Hozzáadás</button>
</form>
<div class="gridStyle" data-bind="koGrid: gridOptions" id="budgetGrid">
</div>

<script>
    var picker = new Pikaday({
        field: document.getElementById("datepicker"),
        firstDay: 1,
        format: 'YYYY-MM-DD'
    });
</script>